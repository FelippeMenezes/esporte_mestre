<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @player.name %></h1>
      
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Informações do Jogador</h5>
          <p><strong>Time:</strong> <%= @player.team.name %></p>
          <p><strong>Posição:</strong> <%= @player.position_name %></p>
          <p><strong>Nível:</strong> <%= @player.level %></p>
          <p><strong>Valor de Mercado:</strong> $<%= number_with_delimiter(@player.market_value) %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Ações</h5>
          <%= link_to "Editar", edit_player_path(@player), class: "btn btn-primary btn-block mb-2" %>
          <%= button_to "Excluir", @player, method: :delete, 
                      confirm: "Tem certeza?", class: "btn btn-danger btn-block mb-2" %>
          <%= link_to "Voltar para Jogadores", team_players_path(@player.team), class: "btn btn-secondary btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>