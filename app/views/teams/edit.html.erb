<div class="container mt-4">
  <h1>Editar Time</h1>

  <%= simple_form_for @team do |f| %>
    <div class="card">
      <div class="card-body">
        <%= f.input :name, label: "Nome do Time" %>
        
        <div class="d-flex justify-content-between">
          <%= f.submit "Atualizar Time", class: "btn btn-success" %>
          <%= link_to "Cancelar", @team, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>