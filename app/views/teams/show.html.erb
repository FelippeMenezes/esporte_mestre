<div class="team-show">
  <div class="team-show-container container mt-1">
    <div class="row">
      <div class="col-md-8">
        <h1><%= @team.name %> </h1>
        <div class="team-card card mb-4">
          <div class="team-show-card-body card-body">
            <h5 class="card-title">Informações do Time</h5>
            <div class="budget-display mb-3">
              <div class="amount">$<%= number_with_delimiter(@team.budget) %></div>
              <small>Orçamento Disponível</small>
            </div>
            <p><strong>Total de Jogadores:</strong> <%= @team.total_players %></p>
            <p><strong>Pode Jogar:</strong>
              <% if @team.can_play_match? %>
                <span class="badge bg-success">Sim</span>
              <% else %>
                <span class="badge bg-danger">Não (mínimo 11 jogadores)</span>
              <% end %>
            </p>
          </div>
        </div>

        <div class="actions-card card">
          <div class="team-show-card-body card-body">
            <h5 class="card-title">Ações</h5>
            <%= link_to team_players_path(@team), class: "btn btn-success btn-block mb-2 w-100" do %>
              <div class="d-flex justify-content-between align-items-center">
                <i class="fa-solid fa-users" style="color: #ffffff;"></i> Seus Jogadores <i class="fa-solid fa-users" style="color: #ffffff;"></i>
              </div>
            <% end %>
            <%= link_to team_market_path(@team), class: "btn btn-success btn-block mb-2 w-100" do %>
              <div class="d-flex justify-content-between align-items-center">
                <i class="fa-solid fa-store" style="color: #ffffff;"></i> Mercado <i class="fa-solid fa-store" style="color: #ffffff;"></i>
              </div>
            <% end %>
            <% last_championship = @team.campaign&.championships&.last %>
            <% if last_championship && last_championship.matches.scheduled.exists? %>
              <%= link_to team_championship_path(@team, last_championship), class: "btn btn-success btn-block mb-2 w-100" do %>
                <div class="d-flex justify-content-between align-items-center">
                  <i class="fa-solid fa-trophy" style="color: #ffffff;"></i> Continuar Campeonato <i class="fa-solid fa-trophy" style="color: #ffffff;"></i>
                </div>
              <% end %>
            <% else %>
              <%= button_to team_championships_path(@team), method: :post, class: "btn btn-success btn-block mb-2 w-100" do %>
                <div class="d-flex justify-content-between align-items-center">
                  <i class="fa-solid fa-trophy" style="color: #ffffff;"></i> Iniciar Campeonato <i class="fa-solid fa-trophy" style="color: #ffffff;"></i>
                </div>
              <% end %>
            <% end %>
            <% if @team.can_play_match? %>
              <%= link_to new_team_match_path(@team), class: "btn btn-success btn-block mb-2 w-100" do %>
                <div class="d-flex justify-content-between align-items-center">
                  <i class="fa-solid fa-futbol" style="color: #ffffff;"></i> Criar Partida <i class="fa-solid fa-futbol" style="color: #ffffff;"></i>
                </div>
              <% end %>
            <% else %>
              <button class="btn btn-warning btn-block mb-2 w-100" disabled title="Precisa de 11 jogadores">
                <div class="d-flex justify-content-between align-items-center">
                  <i class="fa-solid fa-futbol" style="color: #ffffff;"></i> Nova Partida <i class="fa-solid fa-futbol" style="color: #ffffff;"></i>
                </div>
              </button>
            <% end %>
            <%= link_to team_matches_path(@team), class: "btn btn-success btn-block mb-2 w-100" do %>
              <div class="d-flex justify-content-between align-items-center">
                <i class="fa-solid fa-square-poll-horizontal" style="color: #ffffff;"></i> Suas Partidas <i class="fa-solid fa-square-poll-horizontal" style="color: #ffffff;"></i>
              </div>
            <% end %>
            <%= link_to teams_path, class: "btn btn-success btn-block mb-2 w-100" do %>
              <div class="d-flex justify-content-between align-items-center">
                <i class="fa-regular fa-window-restore" style="color: #ffffff;"></i> Seus Times <i class="fa-regular fa-window-restore" style="color: #ffffff;"></i>
              </div>
            <% end %>
          </div>
        </div>

        <h3>Elenco por Posição</h3>
        <% if @players.any? %>
          <div class="row">
            <% %w[G D M A].each do |position| %>
              <div class="col-md-6 col-lg-3 mb-4">
                <div class="card player-position-<%= position.downcase %>">
                  <div class="card-header">
                    <h6><%= Player::POSITION_NAMES[position] %>s</h6>
                  </div>
                  <div class="team-show-card-body card-body">
                    <div class="d-flex justify-content-between align-items-center">
                      <p>Nome</p>
                      <p>Nível</p>
                    </div>

                    <% position_players = @players.select { |p| p.position == position } %>
                    <% if position_players.any? %>
                      <% position_players.each do |player| %>
                        <div class="mb-2 d-flex justify-content-between align-items-center">
                          <%= link_to player.name, player, class: "text-player-show text-decoration-none" %>
                          <% if player.level < 3 %>
                            <small class="badge bg-danger"><%= player.level %></small>
                          <% elsif player.level < 6 %>
                            <small class="badge bg-warning"><%= player.level %></small>
                          <% elsif player.level < 10 %>
                            <small class="badge bg-success"><%= player.level %></small>
                          <% else %>
                            <small class="badge bg-info"><%= player.level %></small>
                          <% end %>
                        </div>
                      <% end %>
                    <% else %>
                      <small>Nenhum jogador</small>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div data-controller="no-players-alert"></div>
        <% end %>
      </div>

      <div class="col-md-4">

        <div class="stats-card card mt-4">
          <div class="card-header">
            <h5>Estatísticas do Time</h5>
          </div>
          <div class="team-show-card-body card-body">
            <div class="row">
              <div class="team-show-table">
                <table class="table table-sm">
                  <tr>
                    <td><strong>Partidas Jogadas:</strong></td>
                    <td><span class="badge bg-success"><%= @team_stats[:total_matches] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Vitórias:</strong></td>
                    <td class="text-success"><span class="badge bg-success"><%= @team_stats[:wins] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Empates:</strong></td>
                    <td class="text-warning"><span class="badge bg-warning"><%= @team_stats[:draws] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Derrotas:</strong></td>
                    <td class="text-danger"><span class="badge bg-danger"><%= @team_stats[:losses] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Gols Marcados:</strong></td>
                    <td class="text-light"><span class="badge bg-success"><%= @team_stats[:goals_for] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Gols Sofridos:</strong></td>
                    <td class="text-danger"><span class="badge bg-danger"><%= @team_stats[:goals_against] %></span></td>
                  </tr>
                  <tr>
                    <td><strong>Saldo de Gols:</strong></td>
                    <td class="<%= @team_stats[:goal_difference] >= 0 ? 'text-success' : 'text-danger' %>">
                      <span class="badge bg-<%= @team_stats[:goal_difference] >= 0 ? 'success' : 'danger' %>"><%= @team_stats[:goal_difference] > 0 ? '+' : '' %><%= @team_stats[:goal_difference] %></span>
                    </td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>

        <% if @recent_matches.any? %>
          <div class="matches-card card mt-4">
            <div class="players-team-card">
              <h5 class="card-title">Últimas Partidas</h5>
              <% @recent_matches.each do |match| %>
                <div class="last-matches-row">
                  <div class="match-details">
                    <small class="match-date"><%= match.match_date.strftime("%d/%m/%Y") %></small>
                    <div class="last-results">
                      <div class="team-home"><%= match.home_team.name %></div>
                      <div class="goals"><strong><%= match.home_goals %></strong></div>
                      <div class="result-badge">
                        <% result = match.result_for_team(@team) %>
                        <span class="badge bg-<%= result == 'V' ? 'success' : result == 'E' ? 'warning' : 'danger' %>">
                          <%= result %>
                        </span>
                      </div>
                      <div class="goals"><strong><%= match.away_goals %></strong></div>
                      <div class="team-away"><%= match.away_team.name %></div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
