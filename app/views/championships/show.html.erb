<% @championship.matches.order(:round).group_by(&:round).each do |round, matches| %>
  <h3>Rodada <%= round %></h3>
  <% if match_to_play = matches.find { |m| m.status == 'scheduled' && (m.home_team_id == @team.id || m.away_team_id == @team.id) } %>
    <%= button_to "Jogar Rodada", play_team_match_path(@team, match_to_play), method: :post, class: "btn btn-primary btn-sm mb-2" %>
  <% end %>
  <% matches.each do |match| %>
    <p>
      <%= match.home_team.name %> <%= match.home_goals %> x <%= match.away_goals %> <%= match.away_team.name %>
    </p>
  <% end %>
<% end %>
